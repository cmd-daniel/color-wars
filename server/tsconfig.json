{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2020",
    "lib": ["es2021"],
    "declaration": true,
    "sourceMap": false,
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": ["src/**/*", "shared/src/**/*"],
  "exclude": ["node_modules"]
}
